<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/md_theme_background"
        android:layout_height="0dp"
        android:layout_weight="2" android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:textSize="96sp"
            android:background="@color/md_theme_background"
            android:textColor="@color/md_theme_onSurface"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/tb11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textAlignment="center"
            android:textSize="64sp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_inverseOnSurface_highContrast"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="C">
        </Button>

        <Button
            android:id="@+id/tb12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_inverseOnSurface_highContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="+/-">
        </Button>

        <Button
            android:id="@+id/tb13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_inverseOnSurface_highContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="%">
        </Button>

        <Button
            android:id="@+id/tb14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:background="@color/md_theme_error"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="/">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:layout_marginBottom="2dp">
        <Button
            android:id="@+id/tb21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="7">
        </Button>

        <Button
            android:id="@+id/tb22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="8">
        </Button>

        <Button
            android:id="@+id/tb23"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="9">
        </Button>

        <Button
            android:id="@+id/tb24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:background="@color/md_theme_error"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="X">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/tb31"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="4">
        </Button>

        <Button
            android:id="@+id/tb32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="5">
        </Button>

        <Button
            android:id="@+id/tb33"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="6">
        </Button>

        <Button
            android:id="@+id/tb34"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:background="@color/md_theme_error"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="-">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/tb41"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="1">
        </Button>

        <Button
            android:id="@+id/tb42"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="2">
        </Button>

        <Button
            android:id="@+id/tb43"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="3">
        </Button>

        <Button
            android:id="@+id/tb44"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:background="@color/md_theme_error"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="+">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/tb51"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="0">
        </Button>

        <Button
            android:id="@+id/tb52"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:textColor="@color/md_theme_onSurface"
            android:background="@color/md_theme_surfaceVariant_mediumContrast"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text=".">
        </Button>

        <Button
            android:id="@+id/tb53"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginEnd="3dp"
            android:background="@color/md_theme_error"
            android:textAlignment="center"
            android:textSize="64sp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="=">
        </Button>
    </LinearLayout>

</LinearLayout>